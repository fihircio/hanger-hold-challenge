{
    "name": "hanger-challenge/backend",
    "description": "Backend API for Hanger Hold Challenge game",
    "type": "project",
    "require": {
        "php": "^8.0",
        "slim/slim": "4.*",
        "slim/psr7": "^1.6",
        "nyholm/psr7": "^1.5",
        "nyholm/psr7-server": "^1.0",
        "laminas/laminas-diactoros": "^2.11",
        "selective/basepath": "^2.0",
        "monolog/monolog": "^2.3",
        "illuminate/database": "^9.0",
        "firebase/php-jwt": "^6.3",
        "php-di/php-di": "^7.0",
        "vlucas/phpdotenv": "^5.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "process-timeout": 0,
        "sort-packages": true
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}