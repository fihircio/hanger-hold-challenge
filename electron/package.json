{
  "name": "hanger-challenge-electron",
  "version": "1.0.0",
  "description": "Hanger Hold Challenge Desktop Application",
  "main": "main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run dev:renderer\" \"npm run dev:main\"",
    "dev:renderer": "cd .. && npm run dev",
    "dev:main": "tsc main/main.ts --target es2020 --outDir main --module commonjs --watch",
    "build": "npm run build:renderer && npm run build:main && npm run build:preload",
    "build:renderer": "cd .. && npm run build",
    "build:main": "tsc main/main.ts --target es2020 --outDir main --module commonjs",
    "build:preload": "tsc preload/preload.ts --target es2020 --outDir preload --module commonjs",
    "build:win": "electron-builder --win --publish=never",
    "build:win-no-sign": "electron-builder --win --publish=never -c.win.sign=false",
    "build:win-dir": "electron-builder --win --dir --publish=never",
    "build:win-portable": "electron-builder --win portable --publish=never",
    "build:win-simple": "electron-builder --win portable --x64 --publish=never",
    "build:win-manual": "node scripts/manual-build.js",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps && npm run rebuild-native",
    "rebuild-native": "electron-rebuild -f -w win32 -a x64",
    "rebuild-native-arm": "electron-rebuild -f -w win32 -a arm64"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.14.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4",
    "electron-rebuild": "^3.2.9",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "serialport": "^12.0.0"
  },
  "build": {
    "appId": "com.hangerchallenge.app",
    "productName": "Hanger Challenge",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main/**/*",
      "preload/**/*",
      "../dist/**/*",
      "../index.html",
      "../index.css",
      "../UI/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "../dist/assets",
        "to": "assets"
      },
      {
        "from": "../index.html",
        "to": "index.html"
      },
      {
        "from": "../index.css",
        "to": "index.css"
      },
      {
        "from": "../UI",
        "to": "UI"
      }
    ],
    "asarUnpack": [
      "**/node_modules/serialport/**/*"
    ],
    "npmRebuild": true,
    "win": {
      "target": [
        {
          "target": "dir",
          "arch": [
            "x64"
          ]
        }
      ],
      "sign": false,
      "signingHashAlgorithms": false,
      "verifyUpdateCodeSignature": false,
      "publisherName": null,
      "certificateFile": null,
      "certificatePassword": null,
      "certificateSubjectName": null
    },
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.games"
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
